@echo off
:menu
    cls
    echo.       menu
    echo.
    echo.       a.- Opcion - 1
    echo.       d.- Salir
    echo.
    set /p Opc=Su opcion es:

    if "%Opc%"      == "a" goto Op1
    if "%Opc%"      == "d" goto Salir


:Op1

    Echo Has elegido opcion - 1
    :: aqui las lineas de comando de opcion
    color 02
    pause
    goto menu 


:Salir
@cls&exit
